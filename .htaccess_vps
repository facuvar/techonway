# TechonWay - Configuración personalizada para VPS
RewriteEngine On

# Configuración de límites para evitar sobrecarga del servidor
<IfModule mod_evasive24.c>
    DOSHashTableSize    1024
    DOSPageCount        5
    DOSSiteCount        100
    DOSPageInterval     2
    DOSSiteInterval     2
    DOSBlockingPeriod   10
</IfModule>

# Configuración PHP adicional para VPS
php_value max_input_nesting_level 64
php_value output_buffering 4096
php_flag log_errors On
php_value error_log "/tmp/php_errors.log"

# Redirección HTTPS (si el VPS lo soporta)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Seguridad - Ocultar archivos sensibles
<Files "config/local.php">
    Deny from all
</Files>
<Files "database_backup.sql">
    Deny from all
</Files>
<Files "*.log">
    Deny from all
</Files>

# Manejar URLs amigables
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^dashboard/?$ dashboard.php [L]
RewriteRule ^login/?$ login.php [L]
RewriteRule ^logout/?$ logout.php [L]

# Redirección del directorio raíz
DirectoryIndex index.php login.php

# Headers de seguridad
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compresión para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
</IfModule>

# Cache para archivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>
